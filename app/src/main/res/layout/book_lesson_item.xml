<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/dashboard_lesson_item_background">

    <TextView
        android:id="@+id/lesson_number"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/icon_background_square"
        android:contentDescription="@string/app_name"
        android:text="@string/exercise_number_placeholder"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/exercise_parts"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lesson_number"
        app:layout_constraintTop_toTopOf="parent">
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>